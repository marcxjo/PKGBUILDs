pkgname=sway-desktop-environment
pkgdesc="Metapackage for a custom sway-based desktop environment installation"
pkgver=0.0.4
pkgrel=1
url='https://github.com/marcxjo/PKGBUILDs'
arch=('any')
license=('MIT')

depends=(
# Core applications
'sway'
'swaybg'
'swayidle'
'swaylock'
'waybar'
'wofi'

# For status bar modules
'emoji-font'
'powerline-fonts'
'ttf-nerd-fonts-symbols'
'ttf-nerd-fonts-symbols-common'
'ttf-material-design-iconic-font'

# Miscellaneous QoL stuff (screenshot tool, etc.)
'sway-contrib'

# Notification daemon
'mako'

# Camera viewer
'guvcview'
# Image viewer
'imv'
# pdf reader
'zathura-pdf-mupdf'
# Simple browser
'luakit'

# Terminal emulator
'tym'

# For mounting sftp filesystems
'sshfs'

# For mounting local filesystems
'bashmount'

# For connecting bluetooth devices'
'bluetui'
)

